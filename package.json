{
  "name": "ichthus-vue",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "core-js": "^3.8.3",
    "vue": "^3.5.3",
    "vue-router": "^4.4.3"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^22.5.4",
    "@vitejs/plugin-vue": "^5.1.3",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.1",
    "bootstrap": "^5.3.3",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.28.0",
    "npm-run-all": "^4.1.5",
    "sass": "1.77.6",
    "typescript": "^5.5.4",
    "vite": "^5.4.3",
    "vue-tsc": "^2.1.6"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es2022": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/eslint-config-typescript"
    ],
    "rules": {
      "@typescript-eslint/no-require-imports": "error"
    },
    "parserOptions": {
      "ecmaVersion": "latest"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
